<% input_class = "block shadow rounded-md border border-gray-700 bg-gray-800 text-white outline-none focus:ring-2 focus:ring-blue-600 px-3 py-2 mt-2 w-full" %>

<%= form_with url: login_path, class: "flex flex-col items-center w-full pt-24 gap-y-10" do |form| %>
  <h1 class="font-bold text-white text-4xl font-outline-shadow text-center"><%= t(".title") %></h1>

  <%= tag.div(flash[:alert], class: error_class) if flash[:alert] %>

  <div>
    <%= form.label :username, class: "font-outline-shadow font-bold text-white" %>
    <%= form.text_field :username, name: "user[username]", class: input_class %>
  </div>

  <div>
    <%= form.label :password, type: "password", class: "font-outline-shadow font-bold text-white" %>
    <%= form.text_field :password, name: "user[password]", type: :password, class: input_class %>
  </div>

  <div>
    <%= form.submit t(".title"), class: "rounded-lg mt-10 py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
