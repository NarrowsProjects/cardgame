<% input_classes = "text-xl w-60 border-0 border-b-4 border-red-500 bg-transparent focus:ring-0 focus:border-red-900 text-red font-bold placeholder-red-300" %>

<%= tag.div(user.errors.first.message, class: error_class) if user.errors.any? %>

<div class="relative flex flex-col items-center">
  <%= image_tag "create_account.png", class: "w-96" %>

  <div class="absolute top-48 flex flex-col items-center justify-center">
    <%= form_with(model: user, class: "contents bg-white bg-opacity-80 p-8 rounded-lg shadow-md") do |form| %>
      <div class="my-5">
        <%= form.text_field :username, placeholder: t(".username_placeholder"), class: input_classes %>
      </div>

      <div class="my-5">
        <%= form.text_field :password, placeholder: t(".password_placeholder"), type: :password, class: input_classes %>
      </div>

      <div class="inline">
        <%= form.submit t(".submit_button"), class: "rounded-lg mt-10 py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
